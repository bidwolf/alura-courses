{
    "openapi": "3.0.0",
    "info": {
        "version": "1.0.0",
        "title": "Flask Auth",
        "description": "Using authentication flow with flask_login"
    },
    "servers": [
        {
            "url": "http://localhost:4444",
            "description": "The local server for developers work on it",
            "variables": {
                "local": {
                    "description": "The environment variable setup",
                    "default": "test",
                    "enum": [
                        "test",
                        "prod",
                        "dev"
                    ]
                }
            }
        }
    ],
    "paths": {
        "/user": {
            "summary": "Endpoint for generally User operations",
            "description": "This endpoint is responsible to due with generally User data like create a new User, or list all existent users",
            "post": {
                "operationId": "createUser",
                "summary": "Endpoint for register a user.",
                "requestBody": {
                    "$ref": "#/components/requestBodies/registerPayload"
                },
                "responses": {
                    "201": {
                        "headers": {
                            "Server": {
                                "schema": {
                                    "type": "string"
                                }
                            },
                            "Date": {
                                "schema": {
                                    "type": "string"
                                }
                            },
                            "Content-Type": {
                                "schema": {
                                    "type": "string"
                                }
                            },
                            "Content-Length": {
                                "schema": {
                                    "type": "string"
                                }
                            },
                            "Vary": {
                                "schema": {
                                    "type": "string"
                                }
                            },
                            "Set-Cookie": {
                                "schema": {
                                    "type": "string"
                                }
                            },
                            "Connection": {
                                "schema": {
                                    "type": "string"
                                }
                            }
                        },
                        "description": "The user has been registered",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Response"
                                }
                            }
                        }
                    },
                    "400": {
                        "$ref": "#/components/responses/BadRequest"
                    },
                    "500": {
                        "$ref": "#/components/responses/ServerError"
                    }
                }
            }
        },
        "/user/{userId}": {
            "summary": "Endpoint to Specific User operations",
            "description": "This endpoint is responsible to read and manipulate a specific user data",
            "get": {
                "parameters": [
                    {
                        "$ref": "#/components/parameters/userId"
                    }
                ],
                "operationId": "getUser",
                "summary": "Endpoint to get a user information.",
                "responses": {
                    "200": {
                        "description": "User found data",
                        "headers": {
                            "Connection": {
                                "schema": {
                                    "type": "string"
                                }
                            },
                            "Content-Length": {
                                "schema": {
                                    "type": "string"
                                }
                            },
                            "Content-Type": {
                                "schema": {
                                    "type": "string"
                                }
                            },
                            "Date": {
                                "schema": {
                                    "type": "string"
                                }
                            },
                            "Server": {
                                "schema": {
                                    "type": "string"
                                }
                            },
                            "Vary": {
                                "schema": {
                                    "type": "string"
                                }
                            }
                        },
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/userResponse"
                                }
                            }
                        }
                    },
                    "400": {
                        "$ref": "#/components/responses/BadRequest"
                    },
                    "401": {
                        "$ref": "#/components/responses/Unauthorized"
                    },
                    "404": {
                        "$ref": "#/components/responses/NotFound"
                    },
                    "500": {
                        "$ref": "#/components/responses/ServerError"
                    }
                }
            },
            "put": {
                "parameters": [
                    {
                        "$ref": "#/components/parameters/userId"
                    }
                ],
                "operationId": "updateUser",
                "summary": "Endpoint to update a user information.",
                "requestBody": {
                    "description": "The data that should be updated",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "anyOf": [
                                    {
                                        "$ref": "#/components/schemas/Email"
                                    },
                                    {
                                        "$ref": "#/components/schemas/Password"
                                    }
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "User found data",
                        "headers": {
                            "Connection": {
                                "schema": {
                                    "type": "string"
                                }
                            },
                            "Content-Length": {
                                "schema": {
                                    "type": "string"
                                }
                            },
                            "Content-Type": {
                                "schema": {
                                    "type": "string"
                                }
                            },
                            "Date": {
                                "schema": {
                                    "type": "string"
                                }
                            },
                            "Server": {
                                "schema": {
                                    "type": "string"
                                }
                            },
                            "Vary": {
                                "schema": {
                                    "type": "string"
                                }
                            }
                        },
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/userResponse"
                                }
                            }
                        }
                    },
                    "400": {
                        "$ref": "#/components/responses/BadRequest"
                    },
                    "401": {
                        "$ref": "#/components/responses/Unauthorized"
                    },
                    "404": {
                        "$ref": "#/components/responses/NotFound"
                    },
                    "500": {
                        "$ref": "#/components/responses/ServerError"
                    }
                }
            }
        },
        "/login": {
            "post": {
                "operationId": "signIn",
                "summary": "Endpoint for login a existent user.",
                "requestBody": {
                    "$ref": "#/components/requestBodies/loginPayload"
                },
                "responses": {
                    "200": {
                        "headers": {
                            "Server": {
                                "schema": {
                                    "type": "string"
                                }
                            },
                            "Date": {
                                "schema": {
                                    "type": "string"
                                }
                            },
                            "Content-Type": {
                                "schema": {
                                    "type": "string"
                                }
                            },
                            "Content-Length": {
                                "schema": {
                                    "type": "string"
                                }
                            },
                            "Vary": {
                                "schema": {
                                    "type": "string"
                                }
                            },
                            "Set-Cookie": {
                                "schema": {
                                    "type": "string"
                                }
                            },
                            "Connection": {
                                "schema": {
                                    "type": "string"
                                }
                            }
                        },
                        "description": "The user has been authenticated",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Response"
                                }
                            }
                        }
                    },
                    "400": {
                        "$ref": "#/components/responses/BadRequest"
                    },
                    "401": {
                        "$ref": "#/components/responses/Unauthorized"
                    }
                }
            }
        },
        "/logout": {
            "get": {
                "operationId": "signOut",
                "summary": "Endpoint for logout a authenticated user",
                "responses": {
                    "200": {
                        "headers": {
                            "Server": {
                                "schema": {
                                    "type": "string"
                                }
                            },
                            "Date": {
                                "schema": {
                                    "type": "string"
                                }
                            },
                            "Content-Type": {
                                "schema": {
                                    "type": "string"
                                }
                            },
                            "Content-Length": {
                                "schema": {
                                    "type": "string"
                                }
                            },
                            "Vary": {
                                "schema": {
                                    "type": "string"
                                }
                            },
                            "Set-Cookie": {
                                "schema": {
                                    "type": "string"
                                }
                            },
                            "Connection": {
                                "schema": {
                                    "type": "string"
                                }
                            }
                        },
                        "description": "User logged out.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Response"
                                }
                            }
                        }
                    },
                    "401": {
                        "$ref": "#/components/responses/Unauthorized"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "UserId": {
                "description": "The unique identifier of the user",
                "type": "integer"
            },
            "Username": {
                "description": "The username used for login purposes",
                "type": "object",
                "required": [
                    "username"
                ],
                "properties": {
                    "username": {
                        "type": "string",
                        "maxLength": 32,
                        "minLength": 4
                    }
                }
            },
            "Password": {
                "description": "The password used for login purposes",
                "type": "object",
                "required": [
                    "password"
                ],
                "properties": {
                    "password": {
                        "type": "string",
                        "maxLength": 32,
                        "minLength": 6
                    }
                }
            },
            "User": {
                "allOf": [
                    {
                        "$ref": "#/components/schemas/Auth"
                    },
                    {
                        "$ref": "#/components/schemas/Email"
                    }
                ]
            },
            "Email": {
                "description": "The user email field",
                "type": "object",
                "required": [
                    "email"
                ],
                "properties": {
                    "email": {
                        "type": "string",
                        "maxLength": 64,
                        "format": "email"
                    }
                }
            },
            "Auth": {
                "type": "object",
                "required": [
                    "username",
                    "password"
                ],
                "properties": {
                    "username": {
                        "type": "string",
                        "maxLength": 32,
                        "minLength": 4
                    },
                    "password": {
                        "type": "string",
                        "maxLength": 32,
                        "minLength": 6
                    }
                }
            },
            "Response": {
                "type": "object",
                "required": [
                    "message",
                    "error"
                ],
                "properties": {
                    "message": {
                        "description": "A human readable error message",
                        "type": "string"
                    },
                    "error": {
                        "description": "Tells if the current request has errors",
                        "type": "boolean"
                    }
                }
            },
            "userResponse": {
                "allOf": [
                    {
                        "$ref": "#/components/schemas/Response"
                    },
                    {
                        "$ref": "#/components/schemas/Email"
                    },
                    {
                        "$ref": "#/components/schemas/Username"
                    }
                ]
            }
        },
        "parameters": {
            "userId": {
                "description": "The user id used in the request",
                "name": "userId",
                "in": "path",
                "required": true,
                "schema": {
                    "$ref": "#/components/schemas/UserId"
                }
            }
        },
        "requestBodies": {
            "registerPayload": {
                "description": "Fields for user registration",
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/User"
                        },
                        "examples": {
                            "username": {
                                "description": "test username",
                                "externalValue": "test_username"
                            },
                            "password": {
                                "description": "test password",
                                "externalValue": "123456"
                            },
                            "email": {
                                "description": "test email",
                                "externalValue": "jhondoe@example.com"
                            }
                        }
                    }
                },
                "required": true
            },
            "loginPayload": {
                "description": "Fields for user login",
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/Auth"
                        },
                        "examples": {
                            "username": {
                                "description": "test username",
                                "externalValue": "test_username"
                            },
                            "password": {
                                "description": "test password",
                                "externalValue": "123456"
                            }
                        }
                    }
                },
                "required": true
            }
        },
        "headers": {},
        "responses": {
            "BadRequest": {
                "headers": {
                    "Server": {
                        "schema": {
                            "type": "string"
                        }
                    },
                    "Date": {
                        "schema": {
                            "type": "string"
                        }
                    },
                    "Content-Type": {
                        "schema": {
                            "type": "string"
                        }
                    },
                    "Content-Length": {
                        "schema": {
                            "type": "string"
                        }
                    },
                    "Vary": {
                        "schema": {
                            "type": "string"
                        }
                    },
                    "Connection": {
                        "schema": {
                            "type": "string"
                        }
                    }
                },
                "description": "The payload is invalid",
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/Response"
                        }
                    }
                }
            },
            "ServerError": {
                "headers": {
                    "Server": {
                        "schema": {
                            "type": "string"
                        }
                    },
                    "Date": {
                        "schema": {
                            "type": "string"
                        }
                    },
                    "Content-Type": {
                        "schema": {
                            "type": "string"
                        }
                    },
                    "Content-Length": {
                        "schema": {
                            "type": "string"
                        }
                    },
                    "Vary": {
                        "schema": {
                            "type": "string"
                        }
                    },
                    "Connection": {
                        "schema": {
                            "type": "string"
                        }
                    }
                },
                "description": "Internal server error",
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/Response"
                        }
                    }
                }
            },
            "Unauthorized": {
                "headers": {
                    "Server": {
                        "schema": {
                            "type": "string"
                        }
                    },
                    "Date": {
                        "schema": {
                            "type": "string"
                        }
                    },
                    "Content-Type": {
                        "schema": {
                            "type": "string"
                        }
                    },
                    "Content-Length": {
                        "schema": {
                            "type": "string"
                        }
                    },
                    "Vary": {
                        "schema": {
                            "type": "string"
                        }
                    },
                    "Set-Cookie": {
                        "schema": {
                            "type": "string"
                        }
                    },
                    "Connection": {
                        "schema": {
                            "type": "string"
                        }
                    }
                },
                "description": "Unauthorized",
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/Response"
                        }
                    }
                }
            },
            "NotFound": {
                "headers": {
                    "Server": {
                        "schema": {
                            "type": "string"
                        }
                    },
                    "Date": {
                        "schema": {
                            "type": "string"
                        }
                    },
                    "Content-Type": {
                        "schema": {
                            "type": "string"
                        }
                    },
                    "Content-Length": {
                        "schema": {
                            "type": "string"
                        }
                    },
                    "Vary": {
                        "schema": {
                            "type": "string"
                        }
                    },
                    "Connection": {
                        "schema": {
                            "type": "string"
                        }
                    }
                },
                "description": "Content not found",
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/Response"
                        }
                    }
                }
            }
        }
    }
}