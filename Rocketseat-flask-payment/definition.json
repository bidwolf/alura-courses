    "components": {
        "schemas": {
            "paymentId": {
                "description": "The unique identifier of the payment transaction",
                "type": "integer"
            },
            "filename": {
                "description": "The filename for the qrcode of the payment",
                "type": "string"
            },
            "Response": {
                "type": "object",
                "required": [
                    "message"
                ],
                "properties": {
                    "message": {
                        "description": "A human readable error message",
                        "type": "string"
                    }
                }
            },
            "Payment": {
                "type": "object",
                "required": [
                    "id",
                    "value",
                    "paid",
                    "bank_payment_id",
                    "qrcode",
                    "expiration_date"
                ],
                "properties": {
                    "id": {
                        "type": "number",
                        "description": "The payment id"
                    },
                    "value": {
                        "type": "number",
                        "multipleOf": 0.1 ,
                        "description": "The value of the transaction"
                    },
                    "paid": {
                        "type": "boolean",
                        "description": "Return if the transaction was paid"
                    },
                    "bank_payment_id": {
                        "type": "string",
                        "format": "uuid",
                        "nullable": true,
                        "description": "The bank institution responsible to the transaction payment"
                    },
                    "qrcode": {
                        "type": "string",
                        "nullable": true,
                        "description": "The qrcode identifier to be used in the client"
                    },
                    "expiration_date": {
                        "type": "string",
                        "format": "date-time"
                    }
                }
            }
        },
        "parameters": {
            "paymentId": {
                "description": "The payment id used in the transaction",
                "name": "paymentId",
                "in": "path",
                "required": true,
                "schema": {
                    "$ref": "#/components/schemas/paymentId"
                }
            },
            "filename": {
                "description": "The filename used to get the qrcode image",
                "name": "filename",
                "in": "path",
                "required": true,
                "schema": {
                    "$ref": "#/components/schemas/filename"
                }
            }
        },
