{
  "openapi": "3.0.0",
  "info": {
      "version": "1.0.0",
      "title": "Flask Payment",
      "description": "Creating a payment API and stablish a websocket to notify payment status using Flask."
  },
  "servers": [
      {
          "url": "http://localhost:4444",
          "description": "The local server for developers work on it",
          "variables": {
              "local": {
                  "description": "The environment variable setup",
                  "default": "test",
                  "enum": [
                      "test",
                      "prod",
                      "dev"
                  ]
              }
          }
      }
  ],
  "paths": {
      "/payments/pix": {
          "post": {
              "operationId": "createPayment",
              "summary": "Endpoint for create a payment transaction.",
              "requestBody": {
                  "description": "Fields for create a payment transaction",
                  "content": {
                      "application/json": {
                          "schema": {
                              "required": [
                                  "value"
                              ],
                              "properties": {
                                  "value": {
                                      "type": "number",
                                      "description": "The value of the transaction"
                                  }
                              }
                          }
                      }
                  },
                  "required": true
              },
              "responses": {
                  "201": {
                      "headers": {
                          "Server": {
                              "schema": {
                                  "type": "string"
                              }
                          },
                          "Date": {
                              "schema": {
                                  "type": "string"
                              }
                          },
                          "Content-Type": {
                              "schema": {
                                  "type": "string"
                              }
                          },
                          "Content-Length": {
                              "schema": {
                                  "type": "string"
                              }
                          },
                          "Vary": {
                              "schema": {
                                  "type": "string"
                              }
                          },
                          "Set-Cookie": {
                              "schema": {
                                  "type": "string"
                              }
                          },
                          "Connection": {
                              "schema": {
                                  "type": "string"
                              }
                          }
                      },
                      "description": "The payment transaction has been created",
                      "content": {
                          "application/json": {
                              "schema": {
                                  "required": [
                                      "id",
                                      "value",
                                      "paid",
                                      "bank_payment_id",
                                      "qrcode",
                                      "expiration_date"
                                  ],
                                  "properties": {
                                      "id": {
                                          "type": "number",
                                          "description": "The payment id"
                                      },
                                      "value": {
                                          "type": "number",
                                          "description": "The value of the transaction"
                                      },
                                      "paid": {
                                          "type": "boolean",
                                          "description": "Return if the transaction was paid"
                                      },
                                      "bank_payment_id": {
                                          "type": "string",
                                          "format": "uuid",
                                          "description": "The bank institution responsible to the transaction payment"
                                      },
                                      "qrcode": {
                                          "type": "string",
                                          "description": "The qrcode identifier to be used in the client"
                                      },
                                      "expiration_date": {
                                          "type": "string",
                                          "format": "date-time"
                                      }
                                  }
                              }
                          }
                      }
                  },
                  "400": {
                      "$ref": "#/components/responses/BadRequest"
                  },
                  "500": {
                      "$ref": "#/components/responses/ServerError"
                  }
              }
          }
      }
  },
  "components": {
      "schemas": {
          "paymentId": {
              "description": "The unique identifier of the payment transaction",
              "type": "integer"
          },
          "filename": {
              "description": "The filename for the qrcode of the payment",
              "type": "string"
          },
          "Response": {
              "type": "object",
              "required": [
                  "message",
                  "error"
              ],
              "properties": {
                  "message": {
                      "description": "A human readable error message",
                      "type": "string"
                  },
                  "error": {
                      "description": "Tells if the current request has errors",
                      "type": "boolean"
                  }
              }
          }
      },
      "parameters": {
          "paymentId": {
              "description": "The payment id used in the transaction",
              "name": "paymentId",
              "in": "path",
              "required": true,
              "schema": {
                  "$ref": "#/components/schemas/paymentId"
              }
          },
          "filename": {
              "description": "The filename used to get the qrcode image",
              "name": "filename",
              "in": "path",
              "required": true,
              "schema": {
                  "$ref": "#/components/schemas/filename"
              }
          }
      },
