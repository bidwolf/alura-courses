{
    "openapi": "3.0.0",
    "info": {
        "version": "1.0.0",
        "title": "Flask Payment",
        "description": "Creating a payment API and stablish a websocket to notify payment status using Flask."
    },
    "servers": [
        {
            "url": "http://localhost:4444",
            "description": "The local server for developers work on it",
            "variables": {
                "local": {
                    "description": "The environment variable setup",
                    "default": "test",
                    "enum": [
                        "test",
                        "prod",
                        "dev"
                    ]
                }
            }
        }
    ],
    "paths": {
        "/payments/pix": {
            "post": {
                "operationId": "createPayment",
                "summary": "Endpoint for create a payment transaction.",
                "requestBody": {
                    "description": "Fields for create a payment transaction",
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "value"
                                ],
                                "properties": {
                                    "value": {
                                        "type": "number",
                                        "description": "The value of the transaction"
                                    }
                                }
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "201": {
                        "headers": {
                            "Server": {
                                "schema": {
                                    "type": "string"
                                }
                            },
                            "Date": {
                                "schema": {
                                    "type": "string"
                                }
                            },
                            "Content-Type": {
                                "schema": {
                                    "type": "string"
                                }
                            },
                            "Content-Length": {
                                "schema": {
                                    "type": "string"
                                }
                            },
                            "Connection": {
                                "schema": {
                                    "type": "string"
                                }
                            }
                        },
                        "description": "The payment transaction has been created",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "required": [
                                        "message",
                                        "payment"
                                    ],
                                    "properties": {
                                        "message": {
                                            "type": "string"
                                        },
                                        "payment": {
                                            "$ref": "#/components/schemas/Payment"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "$ref": "#/components/responses/BadRequest"
                    },
                    "500": {
                        "$ref": "#/components/responses/ServerError"
                    }
                }
            }
        },
        "/payments/pix/confirmation": {
            "post": {
                "operationId": "createPayment",
                "summary": "Endpoint for confirm a payment transaction.",
                "requestBody": {
                    "description": "Fields for confirm a payment transaction",
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "value",
                                    "bank_payment_id"
                                ],
                                "properties": {
                                    "value": {
                                        "type": "number",
                                        "description": "The value of the transaction"
                                    },
                                    "bank_payment_id": {
                                        "type": "string",
                                        "description": "The bank institution responsible to the transaction payment"
                                    }
                                }
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "202": {
                        "headers": {
                            "Server": {
                                "schema": {
                                    "type": "string"
                                }
                            },
                            "Date": {
                                "schema": {
                                    "type": "string"
                                }
                            },
                            "Content-Type": {
                                "schema": {
                                    "type": "string"
                                }
                            },
                            "Content-Length": {
                                "schema": {
                                    "type": "string"
                                }
                            },
                            "Vary": {
                                "schema": {
                                    "type": "string"
                                }
                            },
                            "Set-Cookie": {
                                "schema": {
                                    "type": "string"
                                }
                            },
                            "Connection": {
                                "schema": {
                                    "type": "string"
                                }
                            }
                        },
                        "description": "The payment confirmation request has been accepted ",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "required": [
                                        "message"
                                    ],
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "description": "The message confirmation"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "$ref": "#/components/responses/BadRequest"
                    },
                    "500": {
                        "$ref": "#/components/responses/ServerError"
                    }
                }
            }
        },
        "/payments/pix/{paymentId}": {
            "get": {
                "parameters": [
                    {
                        "$ref": "#/components/parameters/paymentId"
                    }
                ],
                "operationId": "getPayment",
                "summary": "Endpoint to get a payment information.",
                "responses": {
                    "200": {
                        "description": "Payment found",
                        "headers": {
                            "Connection": {
                                "schema": {
                                    "type": "string"
                                }
