                                }
                            },
                            "Vary": {
                                "schema": {
                                    "type": "string"
                                }
                            }
                        },
                        "content": {
                            "text/html": {
                                "encoding": {
                                    "utf-8": {
                                        "contentType": "text/html"
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Payment not found",
                        "headers": {
                            "Connection": {
