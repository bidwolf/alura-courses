                                "schema": {
                                    "type": "string"
                                }
                            }
                        },
                        "content": {
                            "text/html": {
                                "encoding": {
                                    "utf-8": {
                                        "contentType": "text/html"
                                    }
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Server error",
                        "headers": {
                            "Connection": {
                                "schema": {
                                    "type": "string"
                                }
